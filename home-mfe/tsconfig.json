{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["shared/components/*"],
      "@/hooks/*": ["shared/hooks/*"],
      "@/types/*": ["shared/types/*"],
      "@/utils/*": ["shared/utils/*"],
      "@/store/*": ["shared/store/*"],
      "@/features/*": ["features/*"],
      "@/app/*": ["app/*"]
    }
  },
  "include": ["src"]
}